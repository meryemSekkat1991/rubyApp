 <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>
 <p>
   <strong>Comments:</strong>
   <% post.comments.each do |comment| %>
      <div  style="display: flex">
        <strong>comment email:  </strong>
       <%= comment.user.email %>
      </div>
      <div style="display: flex;">
       <strong> comment descriptions:  </strong>
      <%= comment.description %>
      </div>
     </br>
 </p>
  <% end %>
</div>
